<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verydark">


    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerTgl"
        app:layout_constraintVertical_bias="0.0"
        app:navGraph="@navigation/mobile_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <ToggleButton
        android:id="@+id/powerTgl"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/ic_power_button"
        android:textSize="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="INTENSITY"
        android:textColor="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/BarOutput"
        app:layout_constraintStart_toStartOf="@+id/BarOutput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <RadioGroup
        android:id="@+id/BarOutput"
        android:layout_width="170dp"
        android:layout_height="112dp"
        android:layout_marginStart="20dp"
        android:checkedButton="@+id/radioMedium"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        app:layout_constraintStart_toEndOf="@+id/powerTgl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691">

        <RadioButton
            android:id="@+id/radioHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_red_dark"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:text="HIGH"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_orange_dark"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:text="MED"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioLow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:buttonTint="@android:color/holo_green_dark"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:text="LOW"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>