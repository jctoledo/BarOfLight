<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/normal"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/lightImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/image_of_light_state"
            android:src="@drawable/light_bulb_black" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/lightImage"
            android:text="@string/temperature"
            android:textColor="@color/silver"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/temp"
            android:text="@string/temperatureValue"
            android:textColor="@color/silver"

            android:textSize="10sp" />

        <TextView
            android:id="@+id/ipValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperatureValue"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ip"
            android:text="@string/ipAddress"
            android:textColor="@color/silver"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/lightImage"
            android:text="@string/ip"
            android:textColor="@color/silver"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/healthText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="141dp"
            android:layout_toEndOf="@+id/lightImage"
            android:text="Health OK"
            android:textColor="@color/silver"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>